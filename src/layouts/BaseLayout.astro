---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title,
  description = 'Developer Experience, Developer Relations, Technical Events, Developer Culture.',
  image = '/favicon.png',
  type = 'website',
} = Astro.props;

// Get the full URL for the current page
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
// Get the full image URL
const imageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="DevCult" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:site_name" content="DevCult" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageURL} />

    <!-- Preload critical fonts for better performance (LCP) -->
    <link
      rel="preload"
      href="/fonts/Coconat-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="preload" href="/fonts/Coconat-Demi.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Coconat-Bold.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://blog.devcult.io" crossorigin />

    <meta name="theme-color" content="#ff6a00" />

    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Schema.org JSON-LD structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "DevCult",
        "url": "https://devcult.io",
        "logo": "https://devcult.io/favicon.png",
        "description": "Developer experience agency specializing in blockchain and Web3 ecosystems. We help projects build thriving developer communities through documentation, events, and strategic outreach.",
        "email": "info@devcult.io",
        "sameAs": ["https://blog.devcult.io"],
        "contactPoint": {
          "@type": "ContactPoint",
          "email": "info@devcult.io",
          "contactType": "Customer Service",
          "availableLanguage": "English"
        },
        "areaServed": "Worldwide",
        "knowsAbout": [
          "Developer Experience",
          "Technical Documentation",
          "Developer Relations",
          "Blockchain",
          "Web3",
          "Developer Events",
          "Developer Outreach"
        ]
      }
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />

    <script>
      // Scroll animations
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              const target = entry.target as HTMLElement;
              const delay = target.getAttribute('data-delay') || '0';
              target.style.transitionDelay = `${delay}ms`;
              target.classList.add('animate-in');
              observer.unobserve(target);
            }
          });
        },
        { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
      );
      document.querySelectorAll('[data-animate]').forEach((el) => observer.observe(el));

      // Back to top button
      const backToTop = document.getElementById('back-to-top');
      if (backToTop) {
        window.addEventListener('scroll', () => {
          backToTop.classList.toggle('opacity-0', window.scrollY < 500);
          backToTop.classList.toggle('pointer-events-none', window.scrollY < 500);
        });
      }
    </script>
  </body>
</html>
