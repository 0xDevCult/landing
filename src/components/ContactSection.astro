<section id="contact" class="w-full py-24">
  <div class="mx-auto max-w-7xl px-6">
    <div data-animate class="rounded-xl bg-[#ff6a000d] border-l-4 border-l-[#ff6a00] border-t border-t-[#ff6a00] border-r border-r-[#ff6a00] border-b border-b-[#ff6a00] hover:border-l-[#ff8f26] transition-all p-8 md:p-12">
      <div class="max-w-3xl mx-auto">
        <div class="text-center">
          <h2 class="text-3xl md:text-4xl font-semibold font-[--font-coconat]">
            Let's make your DevEx shine.
          </h2>
          <p class="mt-4 text-base text-[#ff6a00]">
            Tell us about your product and goals. We'll reply within 1–2 business days.
          </p>
        </div>

        <!-- Quick Contact Form -->
        <div class="mt-8">
          <form
            class="space-y-3"
            onsubmit="event.preventDefault(); window.location.href='mailto:info@devcult.io?subject=' + encodeURIComponent(document.getElementById('topic').value || 'Project inquiry') + '&body=' + encodeURIComponent('Hi DevCult,%0D%0A%0D%0A' + (document.getElementById('message').value || '') + '%0D%0A%0D%0A— ' + (document.getElementById('name').value || ''))"
          >
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <input
                id="name"
                type="text"
                placeholder="Your name"
                class="w-full rounded-xl border border-[#ff6a00] bg-[--color-bg-primary] px-4 py-3 text-sm placeholder-[#ffa954] focus:outline-none focus:ring-2 focus:ring-[#ff6a00] transition-all"
              />
              <input
                id="topic"
                type="text"
                placeholder="Project topic"
                class="w-full rounded-xl border border-[#ff6a00] bg-[--color-bg-primary] px-4 py-3 text-sm placeholder-[#ffa954] focus:outline-none focus:ring-2 focus:ring-[#ff6a00] transition-all"
              />
            </div>
            <textarea
              id="message"
              placeholder="Short brief about your project"
              rows="4"
              class="w-full rounded-xl border border-[#ff6a00] bg-[--color-bg-primary] px-4 py-3 text-sm placeholder-[#ffa954] focus:outline-none focus:ring-2 focus:ring-[#ff6a00] transition-all"
            ></textarea>
            <button
              type="submit"
              class="w-full rounded-xl bg-[#ff6a00] px-4 py-3 text-sm font-semibold text-black hover:bg-[#ff8f26] transition-all"
            >
              Send Message
            </button>
            <p class="text-xs text-center text-[#ff6a00]">
              By using this form you agree to contact us by email.
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
