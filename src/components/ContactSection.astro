---
const socialLinks = [
  {
    name: 'Email',
    href: 'mailto:info@devcult.io',
    icon: 'mail',
    label: 'info@devcult.io'
  },
  {
    name: 'X / Twitter',
    href: 'https://x.com/0xDevCult',
    icon: 'x',
    label: '@0xDevCult'
  },
  {
    name: 'LinkedIn',
    href: 'https://linkedin.com/company/devcult',
    icon: 'linkedin',
    label: 'DevCult'
  },
  {
    name: 'GitHub',
    href: 'https://github.com/0xDevCult',
    icon: 'github',
    label: '0xDevCult'
  }
];
---

<section id="contact" class="w-full py-24">
  <div class="mx-auto max-w-7xl px-6">
    <div data-animate class="rounded-3xl border border-[--color-border] bg-[--color-bg-secondary] p-8 md:p-12">
      <div class="max-w-3xl mx-auto">
        <div class="text-center">
          <h2 class="text-3xl md:text-4xl font-semibold font-[--font-coconat]">
            Let's make your DevEx shine.
          </h2>
          <p class="mt-4 text-base text-[--color-text-secondary]">
            Tell us about your product and goals. We'll reply within 1–2 business days.
          </p>
        </div>

        <!-- Social Links Grid -->
        <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 gap-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target={social.href.startsWith('mailto') ? undefined : '_blank'}
              rel={social.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
              class="group flex items-center gap-4 p-5 rounded-xl border border-[--color-border] bg-[--color-bg-primary] hover:border-[--color-accent] transition-all"
            >
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-[--color-bg-secondary] border border-[--color-border] flex items-center justify-center group-hover:bg-[--color-accent] group-hover:border-[--color-accent] transition-all">
                <Fragment set:html={
                  social.icon === 'mail'
                    ? '<svg class="w-6 h-6 text-[--color-text-secondary] group-hover:text-black transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>'
                    : social.icon === 'x'
                    ? '<svg class="w-5 h-5 text-[--color-text-secondary] group-hover:text-black transition-colors" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>'
                    : social.icon === 'linkedin'
                    ? '<svg class="w-5 h-5 text-[--color-text-secondary] group-hover:text-black transition-colors" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>'
                    : '<svg class="w-6 h-6 text-[--color-text-secondary] group-hover:text-black transition-colors" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>'
                } />
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-semibold text-[--color-text-primary] group-hover:text-[--color-accent] transition-colors">
                  {social.name}
                </div>
                <div class="text-xs text-[--color-text-tertiary] truncate">
                  {social.label}
                </div>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-[--color-text-tertiary] group-hover:text-[--color-accent] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </a>
          ))}
        </div>

        <!-- Quick Contact Form -->
        <div class="mt-8">
          <form
            class="space-y-3"
            onsubmit="event.preventDefault(); window.location.href='mailto:info@devcult.io?subject=' + encodeURIComponent(document.getElementById('topic').value || 'Project inquiry') + '&body=' + encodeURIComponent('Hi DevCult,%0D%0A%0D%0A' + (document.getElementById('message').value || '') + '%0D%0A%0D%0A— ' + (document.getElementById('name').value || ''))"
          >
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <input
                id="name"
                type="text"
                placeholder="Your name"
                class="w-full rounded-lg border border-[--color-border] bg-[--color-bg-primary] px-4 py-3 text-sm placeholder-[--color-text-tertiary] focus:outline-none focus:ring-2 focus:ring-[--color-accent]"
              />
              <input
                id="topic"
                type="text"
                placeholder="Project topic"
                class="w-full rounded-lg border border-[--color-border] bg-[--color-bg-primary] px-4 py-3 text-sm placeholder-[--color-text-tertiary] focus:outline-none focus:ring-2 focus:ring-[--color-accent]"
              />
            </div>
            <textarea
              id="message"
              placeholder="Short brief about your project"
              rows="4"
              class="w-full rounded-lg border border-[--color-border] bg-[--color-bg-primary] px-4 py-3 text-sm placeholder-[--color-text-tertiary] focus:outline-none focus:ring-2 focus:ring-[--color-accent]"
            ></textarea>
            <button
              type="submit"
              class="w-full rounded-lg bg-[--color-accent] px-4 py-3 text-sm font-semibold text-black hover:bg-[--color-accent-hover] transition-colors shadow-[--shadow-glow]"
            >
              Send Message
            </button>
            <p class="text-xs text-center text-[--color-text-tertiary]">
              By using this form you agree to contact us by email.
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
